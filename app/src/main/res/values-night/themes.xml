<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FarmaPlus" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="fontFamily">@font/montserrat</item>
        <item name="elevationOverlayEnabled">true</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blueVariant</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow</item>
        <item name="colorSecondaryVariant">@color/yellowVariant</item>

        <!-- Text colors -->
        <item name="colorOnPrimary">@color/controlLight</item>
        <item name="colorOnSurface">@color/grey</item>
        <item name="colorOnSecondary">@color/controlLight</item>

        <!-- Background colors-->
        <item name="backgroundColor">@color/controlLight</item>
        <item name="colorSurface">@color/cardDark</item>
        <item name="cardViewStyle">@style/YourCardView</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="actionBarStyle">@style/ActionBarStyle</item>
        <item name="toolbarStyle">@style/my_Toolbar</item>

        <!-- Ilustation colors -->
        <item name="colorIlustrationBackground">#202020</item>
        <item name="colorIlustrationSecondary">#4B4B4B</item>
        <item name="colorIlustrationSkin">#FFE0CD</item>
        <item name="colorIlustrationPrimary">#006DA5</item>
        <item name="colorIlustrationDark">#41576C</item>
        <!--<item name="colorIlustrationDark">#A86C37</item>-->

    </style>

    <style name="ActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/blue</item>
    </style>

    <style name="my_Toolbar" parent="@style/Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@color/whiteBackground</item>
    </style>
    <style name="YourCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/cardDark</item>
    </style>
</resources>