<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FarmaPlus" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorOnPrimary">@color/whiteBackground</item>
        <item name="colorOnSurface">@color/onWhiteSurface</item>

        <!-- Primary brand color. -->
        <item name="fontFamily">@font/montserrat</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blueVariant</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow</item>
        <item name="colorSecondaryVariant">@color/yellowVariant</item>
        <item name="colorOnSecondary">@color/onWhiteSurface</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="iconTint">@color/whiteBackground</item>
        <item name="toolbarStyle">@style/my_Toolbar</item>
    </style>

    <style name="my_Toolbar" parent="@style/Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@color/whiteBackground</item>
    </style>
</resources>