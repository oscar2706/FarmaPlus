<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FarmaPlus" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="fontFamily">@font/montserrat</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blueVariant</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow</item>
        <item name="colorSecondaryVariant">@color/yellowVariant</item>

        <!-- Text color-->
        <item name="colorOnPrimary">@color/whiteBackground</item>
        <item name="colorOnSecondary">@color/onWhiteSurface</item>
        <item name="colorOnSurface">@color/cardDark</item>

        <!-- Color control iconos actionbar, vector asset -->
        <item name="colorControlNormal">@color/controlLight</item>

        <!-- Ilustation colors -->
        <item name="colorIlustrationBackground">#FBFBFB</item>
        <item name="colorIlustrationSecondary">#e6e6e6</item>
        <item name="colorIlustrationSkin">#FFB9B8</item>
        <item name="colorIlustrationPrimary">#0077B3</item>
        <item name="colorIlustrationDark">#3F3C56</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/blueVariant</item>
        <item name="toolbarStyle">@style/my_Toolbar</item>
    </style>

    <style name="my_Toolbar" parent="@style/Widget.MaterialComponents.Toolbar">
        <item name="iconTint">@color/whiteBackground</item>
        <item name="titleTextColor">@color/whiteBackground</item>
    </style>
</resources>